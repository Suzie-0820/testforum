@page
@model testholger.Pages.CreateModel

@{
    ViewData["Title"] = "Create a new post";
}

<h1>Create</h1>

<h4>Posts</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topic.Title" class="control-label"></label>
                <input asp-for="Topic.Title" class="form-control" />
                <span asp-validation-for="Topic.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.OriginalPost" class="control-label"></label>
                <textarea asp-for="Topic.OriginalPost" class="form-control" rows="10"></textarea> 
                <span asp-validation-for="Topic.OriginalPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.TopicSubject" class="control-label mr-sm-2"></label>
                <select class=" from-control custom-select mr-sm-2" asp-for="Topic.TopicSubject" />
                    <option selected>Choose...</option>
                    <option value="Programming">Programming</option>
                    <option value="Housework">Housework</option>
                    <option value="Gaming">Gaming</option>
                    <option value="Personnal">Personnal</option>
                    <option value="Kids">Kids</option>
                <span asp-validation-for="Topic.TopicSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
